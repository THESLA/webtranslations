// Fondos o backgrounds de algunas p√°ginas
html
	height 100%
body
	height 100%
	min-height 100%
	
.fondo
	background-image url("../img/ultrabook.jpg")
	background-attachment fixed
	background-position top center
	background-repeat no-repeat
	background-size auto 100%
	background-size cover
	min-height 100%

.fondo--transparente
	background rgba($black_puro, 0.5)
	background-repeat no-repeat
	background-size auto 100%
	background-size cover
	min-height 100vh

.fondo_color
	background $white
	
